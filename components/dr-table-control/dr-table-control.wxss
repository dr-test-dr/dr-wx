/* components/dr-table-control/dr-table-control.wxss */
.table_content{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
}

.table_item{
  flex: 1;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

.active{
  color: red;
}
.table_item.active text {
  padding: 16rpx 10rpx;
  border-bottom: 6rpx solid #ff5777;
}